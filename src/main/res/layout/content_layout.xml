<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <!-- Toolbar configurations -->
    <android.support.v7.widget.Toolbar
        app:title="@string/placeholder_title"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:theme="@style/Horchat.ActionBar"
        app:popupTheme="@style/Horchat.ActionBar.Popup"
        android:background="@color/colorPrimary"
        android:titleTextColor="@color/colorPrimaryText"/>

    <!-- The rest of the UI will be based on Fragments -->
    <FrameLayout
        android:id="@+id/content"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"/>

</RelativeLayout>
