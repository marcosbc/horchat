<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- Server connection layout -->
    <EditText
        android:id="@+id/serverHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/connectToServer_serverHost"/>

    <EditText
        android:id="@+id/serverPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serverHost"
        android:layout_marginTop="10dp"
        android:hint="@string/connectToServer_serverPort"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serverPort"
        android:layout_marginTop="10dp"
        android:hint="@string/connectToServer_username"/>

    <Button
        android:id="@+id/connectToServer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="10dp"
        android:text="@string/connectToServer_next"/>

</RelativeLayout>